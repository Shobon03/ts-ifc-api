{
  "name": "ts-ifc-api",
  "version": "1.0.0",
  "description": "A BIM interoperability API, written in Typescript",
  "private": true,
  "workspaces": [
    "backend/node",
    "frontend",
    "documentation"
  ],
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"pnpm run dev:backend\" \"pnpm run dev:python\" \"pnpm run dev:frontend\" \"pnpm run dev:documentation\"",
    "dev:backend": "pnpm --filter=@ts-ifc-api/backend-node dev",
    "dev:python": "cd backend/python && venv\\Scripts\\activate && python src/server.py",
    "dev:frontend": "pnpm --filter=@ts-ifc-api/frontend dev",
    "dev:documentation": "pnpm --filter=@ts-ifc-api/docs dev",
    "build": "pnpm -r build",
    "build:backend": "pnpm --filter=@ts-ifc-api/backend-node build",
    "build:frontend": "pnpm --filter=@ts-ifc-api/frontend build",
    "build:documentation": "pnpm --filter=@ts-ifc-api/docs build",
    "start": "pnpm --filter=@ts-ifc-api/backend-node start",
    "test": "pnpm -r test",
    "test:backend": "pnpm --filter=@ts-ifc-api/backend-node test",
    "test:frontend": "pnpm --filter=@ts-ifc-api/frontend test",
    "test:documentation": "pnpm --filter=@ts-ifc-api/docs test"
  },
  "keywords": [
    "bim",
    "ifc",
    "interoperability",
    "api",
    "typescript"
  ],
  "author": {
    "name": "Matheus Piovezan Teixeira",
    "email": "66133043+Shobon03@users.noreply.github.com",
    "url": "https://github.com/Shobon03/ts-ifc-api"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Shobon03/ts-ifc-api"
  },
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@biomejs/biome": "^2.2.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "concurrently": "^9.2.1"
  }
}
